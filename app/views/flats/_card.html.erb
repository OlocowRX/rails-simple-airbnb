<% @flats.each do |flat| %>
  <div class="card-trip">
  <img src="<%= flat.image_url %>"/>
  <div class="card-trip-infos">

    <div>
      <h2><%= flat.name %></h2>
      <p><%= flat.address %></p>
    </div>

    <div>
      <%= render 'icon', flat: flat %>
    </div>

    <div>
      <%= link_to 'More info', flat_path(flat) %> |
      <%= link_to 'Edit', flats_path %> |
      <%= link_to 'Remove', flats_path %>
    </div>
  </div>
</div>

<% end %>
